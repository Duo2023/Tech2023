@{
    ViewData["Title"] = "Forgot Password?";
}

<div class="flex h-full justify-center items-center">
    <div class="bg-secondary rounded-3xl shadow-2xl">
        <div class="flex flex-col items-center mx-8 my-8">
            <h1 class="font-bold mb-4">Forgot Password</h1>
            <form class="flex flex-col space-y-4" action="" method="post">
                <h4 class="w-72 bg-background p-3 border-2 border-hint rounded-2xl">We will send a <strong>password reset link</strong> to your registered E-mail ID.</h4>
                <div class="flex flex-col">
                    <p class="ml-2 font-semibold leading-7">Email:</p>
                    <input type="email" name="email" placeholder="Enter email" class="w-72 bg-background outline-none px-4 py-3 rounded-2xl">
                    <div class="flex flex-row justify-between px-2 pb-2 pt-1">
                        <a class="text-sm underline hover:no-underline" asp-controller="User" asp-action="Login">Back To Login</a>
                    </div>
                </div>
                <button id="send-button" type="submit" class="bg-primary font-bold px-4 py-3 rounded-xl">Send</button>
            </form>
        <div/>
    </div>
</div>