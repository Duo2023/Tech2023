@{
    ViewData["Title"] = "Login";
}

<div class="flex h-full justify-center items-center">
    <div class="bg-secondary rounded-3xl shadow-2xl">
        <div class="flex flex-col items-center mx-8 my-8">
            <h1 class="font-bold mb-4">Login</h1>
            <form class="flex flex-col space-y-4" action="" method="post">
                <div class="">
                    <p class="ml-2 font-semibold">Username: </p>
                   <input type="text" name="username" id="username" placeholder="Enter username" class="w-72 bg-background outline-none px-4 py-3 rounded-2xl">
                </div>
                <div class="flex flex-col">
                    <p class="ml-2 font-semibold">Password: </p>
                    <input type="password" name="password" id="password" placeholder="Enter password" class="w-72 bg-background outline-none px-4 py-3 rounded-2xl">
                    <div class="flex flex-row justify-between px-2 pb-2 pt-1">
                        <div class="flex flex-row">
                            <input id="show-password-checkbox" type="checkbox" value="false">
                            <p id="show-password-text" class="ml-2 text-sm">Show password</p>
                        </div>
                        <p class="text-sm underline hover:no-underline">Forgot password?</p>
                    </div>
                </div>
                <button id="login-button" type="submit" class="bg-primary font-bold px-4 py-3 rounded-xl">Login</button>
            </form>
        </div>
    </div>
</div>