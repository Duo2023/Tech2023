@{
    ViewData["Title"] = "Settings";
}

<div>
    <h1>Settings</h1>

    <div id="delete-account-button">
        <button onclick="interactions.dialog.showDialog('delete-account-modal', true)"
                class="w-full inline-flex hover:bg-red-500/90 p-2 rounded-lg">
            <span class="icon-sm mr-3">delete</span>
            Delete Account
        </button>

        <dialog id="delete-account-modal" class="font-semibold">
            <h3>Delete the account <strong class="underline">@User!.Identity!.Name</strong>?</h3>
            <br/>
            <h4>By clicking yes, you understand that your account and your data will be deleted and not able to be restored</h4>
            <form method="post" asp-controller="Account" asp-action="Delete"
                  class="w-full flex flex-row justify-end mt-4 space-x-4">
                <button formmethod="dialog" type="submit" class="p-2 hover:underline">
                    Go
                    back!
                </button>
                <button class="inline-flex bg-red-500/90 p-2 rounded-lg" type="submit">
                    Yes, Delete My Account
                </button>
            </form>
        </dialog>
    </div>
</div>