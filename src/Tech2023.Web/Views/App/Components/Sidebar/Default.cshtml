@using Tech2023.Core;
@using Tech2023.DAL;
@using Tech2023.Web.Models.Components;
@model SidebarViewModel;

<style>
    :root {
        --sidebar-width: 21rem;
    }
</style>
<aside id="sidebar"
    class="sidebar z-20 grid grid-rows-[min-content_auto] fixed md:relative h-full w-full md:w-[var(--sidebar-width,_21rem)] bg-secondary rounded-t-[2.5rem] md:rounded-none translate-y-[calc(100vh_-_var(--navbar-height,_0rem)_-_var(--sidebar-search-height))] md:translate-y-0 left-0 p-1"
    style="--sidebar-search-height: 5.5rem">
    @* TODO: Implement swipe up gesture for mobile devices + layout changes *@
    <div class="flex flex-col items-center px-3 py-2" style="height: var(--sidebar-search-height, 5.5rem)">
        <div class="md:hidden h-1 w-12 mb-2 bg-light-hint rounded-full"></div>
        <input type="text" name="search" placeholder="üîé Search" autocomplete="off" id="search-bar"
            class="bg-background w-full px-5 py-3 rounded-full outline-none border-2 border-light-hint border-opacity-0 focus:border-opacity-80 transition-colors duration-150 ease-out">
    </div>

    <div id="sidebar-items" class="flex flex-col justify-between"
        style="height: calc(100vh - var(--navbar-height, 0rem) - var(--sidebar-search-height, 0rem) - 0.5rem)">
        <div id="favourites-section"
            class="section inline-flex justify-start items-center h-6 mb-1 mx-2 text-light-hint transition-all duration-75 ease-out">
            <span class="material-symbols-rounded-sm">expand_more</span>
            <div>‚≠ê</div>
            <p class="font-bold"> Favourites</p>
        </div>
        <div id="subject-list" class="flex flex-col px-2 h-full space-y-2 overflow-y-auto">
            @foreach (var subject in Model.Subjects)
            {
                <a asp-controller="App" asp-action="PaperBrowser"
                    asp-route-curriculum="@CurriculumLevelHelpers.ToString(subject.Level, subject.Source)"
                    asp-route-subject="@subject.Name"
                    class="subject bg-secondary hover:bg-background py-3 rounded-xl shadow-xl transition-colors duration-50 ease-linear">
                    <div class="inline-flex px-4 font-semibold items-center justify-start text-md">
                        <div class="relative subject-icon text-center w-6 h-6 z-10 rounded-md mr-3"
                            style="background-color: @HtmlHexString.GetHtmlHexString(subject.DisplayColor ?? 0);">
                            <p class="drop-shadow-[0_0_1.5px_rgb(0,0,0,0.6)]">@subject.Name[0]</p>
                        </div>
                        <p>@subject.Name.ToTitleCase() (@CurriculumLevelHelpers.ToString(subject.Level, subject.Source))</p>
                    </div>
                </a>
            }
        </div>
        <div id="sidebar-utils" class="flex flex-col my-2">
            <a asp-controller="Settings" asp-action="Index"
                class="bg-secondary hover:bg-background py-3 mx-3 my-2 rounded-xl shadow-xl transition-colors duration-50 ease-linear">
                <div class="inline-flex px-4 font-semibold items-center justify-start text-md">
                    <span class="material-symbols-rounded-sm text-md w-6 h-6 rounded-md mr-3">settings</span>
                    <p>Settings</p>
                </div>
            </a>
        </div>
    </div>
</aside>