    <h1 class="mx-3 font-bold">@standardName</h1>

    <div id="papers" class="w-full overflow-x-hidden mr-1">
        @for (int i = 2023; i > 2017; i--)
        {
            <h1 class="paper-category bg-light-hint bg-opacity-10 m-1 px-3 rounded-lg">@i</h1>
            @for (int j = 0; j < 8; j++)
            {
                <a asp-controller="App" asp-action="PaperViewer">
