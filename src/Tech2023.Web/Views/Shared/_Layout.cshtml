@{
    var sidebarWidth = "256px";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tech2023.Web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body class="text-white bg-background">
    <header>
        <nav class="px-2 sm:px-4 py-2.5 shadow-md bg-secondary text-white">
            <div class="container flex flex-wrap items-center justify-between w-screen h-16 mx-auto">
                <a class="text-center self-center flex items-center mx-4 px-4 py-3 font-bold bg-blue-700 rounded-2xl" asp-area="" asp-controller="Home" asp-action="Index">Tech2023</a>
                <!-- WIP -->
                
                <div class="flex items-center md:order-2">
                    <ul class="flex flex-row space-x-8 mt-0 font-bold text-white">
                        <li class="nav-item">
                            <button class="h-8 w-8 material-symbols-rounded">more_horiz</button>
                        </li>
                        <li class="nav-item">
                            <button class="h-8 w-8 material-symbols-rounded">account_circle</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="sidebar">
        <aside class="side-bar fixed left-0 max-h-screen h-screen z-40 bg-secondary justify-end" style="width: @sidebarWidth;">
            <div class="flex flex-row container">
            <div class="w-auto"><p>search</p></div>
                <button class="material-symbols-rounded relative navbar-toggler p-4" type="button" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    keyboard_arrow_left
            </button>
            </div>
        </aside>
        <main role="main" class="absolute p-10" style="left: @sidebarWidth;">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="fixed flex justify-end items-end bottom-0 right-1 w-auto text-slate-100 text-sm font-semibold">
            &copy; @(DateTime.UtcNow.Year == 2023 ? 2023 : $"2023 - {DateTime.UtcNow.Year}") - Duo2023 - &ThinSpace;<a class="hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>