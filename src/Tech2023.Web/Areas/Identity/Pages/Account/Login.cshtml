@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="flex h-full justify-center items-center">
    <div class="bg-secondary rounded-3xl shadow-2xl">
        <div class="w-72 flex flex-col items-center mx-8 my-8">
            <h1 class="font-bold mb-4">Login</h1>
            <form id="form" class="w-full flex flex-col" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div id="email-container" class="flex flex-col">
                    <label asp-for="Input.Email" class="ml-2 font-semibold leading-7"></label>
                    <input asp-for="Input.Email" class="w-full px-4 py-3 rounded-2xl bg-background outline-none
                    border-light-hint border-2 border-opacity-0 focus:border-opacity-75 transition-all duration-75 ease-out">
                    <span asp-validation-for="Input.Email" class="mx-2 font-semibold text-red-500 empty:opacity-0 transition-all duration-200"></span>
                </div>
                <div id="password-container" class="flex flex-col">
                    <label asp-for="Input.Password" class="ml-2 font-semibold leading-7">Password:</label>
                    <input asp-for="Input.Password" class="w-72 px-4 py-3 rounded-2xl bg-background outline-none border-light-hint border-2 border-opacity-0 focus:border-opacity-75 transition-all duration-75 ease-out">
                    <span asp-validation-for="Input.Password" class="mx-2 font-semibold text-red-500 empty:opacity-0 transition-all duration-200"></span>
                    <div class="flex flex-row justify-between p-2 pt-1">
                        <div class="flex flex-row">
                            <input id="show-password-checkbox" type="checkbox" value="false" onclick="TS.user.forms.togglePasswordVisibility()">
                            <label for="show-password-checkbox" id="show-password-text" class="ml-2 text-sm">Show password</label>
                        </div>
                        <a class="text-sm underline hover:no-underline" asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot password?</a>
                    </div>
                </div>
                <button id="login-button" type="submit" class="bg-primary font-bold px-4 py-3 my-2 rounded-xl">Login</button>
            </form>
            <a class="text-sm underline hover:no-underline p-2" asp-area="Identity" asp-page="/Account/Register">Don't have an account?</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}